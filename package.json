{
  "name": "minimal-node-web-server",
  "version": "1.5.0",
  "description": "Containerized Minimal Node Web Server",
  "main": "index.js",
  "imageRepo": "duluca/minimal-node-web-server",
  "imageName": "minimal-node",
  "imagePort": "3000",
  "scripts": {
    "start": "node index",
    "test": "jasmine",
    "image:build": "npm run test && with-package docker image build . -t pkg.imageRepo:latest",
    "image:run": "npm run image:clean && npm run image:runHelper",
    "image:runHelper": "with-package docker run --name pkg.imageName -d -p pkg.imagePort:3000 pkg.imageRepo",
    "image:publish": "with-package docker image push pkg.imageRepo",
    "image:clean": "with-package docker rm -f pkg.imageName || true",
    "image:taillogs": "with-package docker logs -f pkg.imageName",
    "image:debug": "npm run image:build && npm run image:run && sleep 1 && with-package open 'http://localhost:pkg.imagePort' && npm run image:taillogs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duluca/minimal-node-web-server.git"
  },
  "keywords": [
    "node",
    "apline",
    "docker",
    "express",
    "web",
    "server"
  ],
  "author": "Doguhan Uluca",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/duluca/minimal-node-web-server/issues"
  },
  "homepage": "https://github.com/duluca/minimal-node-web-server#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "chalk": "^2.0.1",
    "compression": "^1.7.0",
    "express": "^4.15.3",
    "express-sslify": "^1.2.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "jasmine": "^2.6.0",
    "with-package": "^0.2.0"
  }
}
